<% layout("/layouts/boilerplate") %>

<style>
  .confirm-card {
    background-color: #2b2b2b;
    color: #ebebeb;
    border: 1px solid #444;
    border-radius: 12px;
    padding: 30px;
    max-width: 600px;
    margin: 40px auto;
  }

  .confirm-card h3 {
    text-align: center;
    color: #d4be9c;
    margin-bottom: 25px;
  }

  .confirm-card p {
    font-size: 16px;
    margin: 8px 0;
    border-bottom: 1px dashed #555;
    padding-bottom: 6px;
  }

  .btn-confirm {
    background-color: #d4be9c;
    color: #1e1e1e;
    font-weight: 600;
    border: none;
    padding: 12px 20px;
    border-radius: 6px;
    margin-top: 20px;
    width: 100%;
  }

  .btn-confirm:hover {
    background-color: #c2ad8c;
  }
</style>

<div class="confirm-card shadow">
  <h3>üè® Confirm Your Stay</h3>

  <p><strong>Name:</strong> <%= booking.guestName %></p>
  <p><strong>Email:</strong> <%= booking.email %></p>
  <p><strong>Check-In:</strong> <%= booking.checkIn %></p>
  <p><strong>Check-Out:</strong> <%= booking.checkOut %></p>
  <p><strong>Total:</strong> ‚Çπ<%= booking.totalPrice %></p>

  <form method="POST" action="/hotel/<%= booking.hotel._id %>/confirm">
    <input type="hidden" name="guestName" value="<%= booking.guestName %>">
    <input type="hidden" name="email" value="<%= booking.email %>">
    <input type="hidden" name="checkIn" value="<%= booking.checkIn %>">
    <input type="hidden" name="checkOut" value="<%= booking.checkOut %>">
    <input type="hidden" name="totalPrice" value="<%= booking.totalPrice %>">
    <button type="submit" class="btn-confirm">Pay Now</button>
  </form>
</div>
