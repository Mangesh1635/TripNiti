<% layout("/layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-start mb-5" style="padding-top: 2rem;">
    <div class="card p-4 border" style="color: #ebebeb; border-color: #d4be9c; width: 100%; max-width: 650px;">
        <h2 class="text-center mb-4">Create New Hotel Listing</h2>

        <form method="post" action="/newhotel" novalidate enctype="multipart/form-data" class="needs-validation">
            <div class="mb-3">
                <label for="hotel[name]" class="form-label">Hotel Name</label>
                <input type="text" name="hotel[name]" placeholder="Enter Name of Hotel" class="form-control" 
                    style="border: 3px solid #d4be9c;" required>
                <div class="invalid-feedback">Please enter the hotel name</div>
            </div>

            <div class="mb-3 position-relative">
                <label for="hotel-location" class="form-label">Location</label>
                <input type="text" name="hotel[location]" id="hotel-location" placeholder="Enter Location"
                  class="form-control" style="border: 3px solid #d4be9c;" required>
                <div class="invalid-feedback">Please enter the location</div>
              
                <!-- Suggestion box -->
                <div id="hotel-location-suggestions" class="suggestion-box"></div>
              </div>
              

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="hotel[roomsAvailable]" class="form-label">Rooms Available</label>
                    <input type="number" name="hotel[roomsAvailable]" placeholder="Enter Rooms Available" class="form-control" 
                        style="border: 3px solid #d4be9c;" required>
                    <div class="invalid-feedback">Please enter rooms available</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="hotel[pricePerNight]" class="form-label">Price Per Night</label>
                    <input type="text" name="hotel[pricePerNight]" placeholder="Enter Price Per Night" class="form-control" 
                        style="border: 3px solid #d4be9c;" required>
                    <div class="invalid-feedback">Please enter the price per night</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="hotel[image]" class="form-label">Image URL</label>
                <input type="file" name="hotel[image]" class="form-control" 
                    style="border: 3px solid #d4be9c;">
            </div>

            <div class="mb-3">
                <label for="hotel[amenities]" class="form-label">Amenities (Comma Separated)</label>
                <input type="text" name="hotel[amenities]" placeholder="E.g., WiFi, Pool, Gym" class="form-control" 
                    style="border: 3px solid #d4be9c;" required>
                <div class="invalid-feedback">Please enter amenities</div>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn text-dark px-4" style="background-color: #d4be9c;">Add Hotel</button>
            </div>
        </form>
    </div>
</div>