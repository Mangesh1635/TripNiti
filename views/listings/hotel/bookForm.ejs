<% layout("/layouts/boilerplate") %>

<style>
  .card-custom {
    background-color: #2b2b2b;
    border: 1px solid #444;
    border-radius: 12px;
    padding: 30px;
    width: 100%;
    max-width: 600px;
    margin: 40px auto;
    color: #ebebeb;
  }

  .card-custom h2 {
    color: #d4be9c;
    text-align: center;
    margin-bottom: 25px;
  }

  .form-control-custom {
    background-color: #1e1e1e;
    color: #ebebeb;
    border: 1px solid #555;
    border-radius: 6px;
    padding: 10px;
    margin-bottom: 15px;
    width: 100%;
  }

  .btn-custom {
    background-color: #d4be9c;
    color: #1e1e1e;
    font-weight: 600;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    width: 100%;
  }

  .btn-custom:hover {
    background-color: #c2ad8c;
  }
</style>

<div class="card-custom shadow">
  <h2>üè® Book <%= hotel.name %></h2>
  <form method="POST" action="/hotel/<%= hotel._id %>/book">
    <label for="guestName">Name</label>
    <input type="text" name="guestName" class="form-control-custom" placeholder="Your Name" required>
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control-custom" placeholder="Your Email" required>
    <label for="mobile">Mobile Number</label>
    <input type="number" name="mobile" class="form-control-custom" placeholder="Your Mobile No." required>
    <label for="checkIn">Check-In</label>
    <input type="date" name="checkIn" class="form-control-custom" required>
    <label for="checkOut">Check-Out</label>
    <input type="date" name="checkOut" class="form-control-custom" required>
    <button type="submit" class="btn-custom mt-3">Continue</button>
  </form>
</div>
