<% layout("/layouts/boilerplate") %>
  <title><%= package.name %> - Travel Package</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #121212;
      color: #ebebeb;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .containers {
      max-width: 1000px;
      margin: 2rem auto;
      padding: 2rem;
      background-color: #1e1e1e;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

    h1, h2 {
      color: #d4be9c;
    }

    .images {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin: 1rem 0;
    }

    .images img {
      width: 100%;
      border-radius: 8px;
      height: 350px;
      object-fit: cover;
      border: 2px solid #f4f1f1;
    }

    .section {
      margin-top: 2rem;
    }

    .cards {
      background-color: #2a2a2a;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    .view-button {
    padding: 8px 20px;
    background: linear-gradient(135deg, #2a2a3c, #1a1a2e);
    color: #d4be9c;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(212, 190, 156, 0.3);
    font-size: 0.9rem;
  }

    .highlight {
      display: inline-block;
      background-color: #f4f1f1;
      color: #121212;
      padding: 4px 10px;
      border-radius: 16px;
      margin: 0.3rem;
      font-weight: 600;
    }

    /* .bus-image{
      width: 50%;
      border-radius: 8px;
      height: 350px;
      object-fit: cover;
      border: 2px solid #f4f1f1;
    } */

    .bus-cards {
  display: flex;
  width: 100%;
  max-width: 800px;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
  margin: 20px auto;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.bus-image-section {
  flex: 1;
  overflow: hidden;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  background-color: #2a2a2a;
}

.bus-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
} 

strong{
  color: #d4be9c;
}
.bus-details-section {
  flex: 1;
  padding: 20px;
  background-color: #2a2a2a;
}

.bus-details-section p {
  margin: 10px 0;
  font-size: 16px;
  display: flex;
  justify-content: center;
  
}
  </style>
</head>
<body>
  <div class="containers">
    <h1 class="text-center"><%= package.name %></h1>
    <p><strong>Location:</strong> <%= package.location %></p>
    <p><%= package.description %></p>

    <% if (package.images && package.images.length) { %>
      <div class="images">
        <% package.images.forEach(img => { %>
          <img src="<%= img %>" alt="Attraction image" />
        <% }) %>
      </div>
    <% } %>

    <div class="section">
      <h2>Highlights</h2>
      <% package.highlights.forEach(item => { %>
        <span class="highlight"><%= item %></span>
      <% }) %>
    </div>

    <div class="section">
      <h2>Average Cost</h2>
      <p>â‚¹ <%= package.averageCost.toLocaleString() %> per person</p>
    </div>

    <div class="section">
      <!-- Transport options -->

      <h2>Travel Option </h2>


<% package.transportOptions.forEach(bus => { %>
  
    <div class="bus-cards cards">
        <div class="bus-image-section">
          <img
            src="<%= bus.image.url %>"
            class="bus-image"
            alt="<%= bus.name %>"
          />
          
        </div>
        <div class="bus-details-section">
          <p><strong><%= bus.name %></strong></p>
          <p><strong>From : </strong>&nbsp; <%=bus.source%>   <%=bus.departureTime%></p>
          <p><strong>To : </strong> &nbsp;<%=bus.destination%>   <%=bus.arrivalTime%></p>
          <p><strong> Price : </strong>&nbsp;<%=bus.pricePerSeat%></p>
          <p><a href="/showbus/<%= bus._id %>" class="view-button">
            View Details <i class="fa-solid fa-arrow-right ms-1"></i>
          </a></p>
          
        </div>
    </div>
  <% }) %>
  


  
  <!-- Hotel recommendations -->

  <h2>Stay Option </h2>

  <% package.hotelRecommendations.forEach(hotel => { %>
    <div class="bus-cards cards">
      <div class="bus-image-section">
        <img
          src="<%= hotel.image.url %>"
          class="bus-image"
          alt="<%= hotel.name %>"
        /> 
      </div>

      <div class="bus-details-section"> 
        <p><strong>Hotel Name :</strong> <%= hotel.name %></p>
        <p><strong>Rating :</strong> 4.5/5</p>
        <p><strong>Address :</strong> <%= hotel.location %></p>
        <p><a href="/showhotel/<%= hotel._id %>" class="view-button">
          View Details <i class="fa-solid fa-arrow-right ms-1"></i>
        </a></p>
      </div>
      
    </div>
  <% }) %>
  
    </div>
  </div>
</body>
</html>
