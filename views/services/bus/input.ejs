<% layout("/layouts/boilerplate") %>
<div class="d-flex justify-content-center align-items-start mb-5" style="padding-top: 5rem;">
  <div class="card p-4 border" style="color: #ebebeb; border-color: #d4be9c; width: 100%; max-width: 600px;">
    <h2 class="text-center mb-4">Search Buses on TripNiti</h2>

    <form action="/search-buses" method="POST" novalidate class="needs-validation">
      
      <!-- Source and Destination on the same row -->
      <div class="row position-relative">
        <div class="col-md-6 mb-3 position-relative">
          <label for="source" class="form-label">Source</label>
          <input type="text" name="source" id="source" placeholder="Enter Source City"
            class="form-control" style="border: 3px solid #d4be9c;" required autocomplete="off">
          <div id="source-suggestions" class="suggestions-list"></div>
          <div class="invalid-feedback">Please enter a source city</div>
        </div>
      
        <div class="col-md-6 mb-3 position-relative">
          <label for="destination" class="form-label">Destination</label>
          <input type="text" name="destination" id="destination" placeholder="Enter Destination City"
            class="form-control" style="border: 3px solid #d4be9c;" required autocomplete="off">
          <div id="destination-suggestions" class="suggestions-list"></div>
          <div class="invalid-feedback">Please enter a destination city</div>
        </div>
      </div>
      

      <!-- Date Picker for Journey Date -->
      <div class="mb-3">
        <label for="date" class="form-label">Journey Date</label>
        <input type="date" name="date" id="date"
          class="form-control" style="border: 3px solid #d4be9c;" required>
        <div class="invalid-feedback">Please select a journey date</div>
      </div>

      <!-- Search Train Button -->
      <div class="d-flex justify-content-center">
        <button class="btn text-dark px-4" style="background-color: #d4be9c;">Search Buses</button>
      </div>
    </form>
  </div>
</div>
