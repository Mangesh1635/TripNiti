<%if(success && success.length){%>
    <div 
    class="alert alert-success alert-dismissible fade my-3 show col-6 offset-3 ">
    <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<%}%>

<%if(error && error.length){%>
    <div 
    class="alert alert-danger alert-dismissible fade show my-3 col-6 offset-3 ">
    <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<%}%>

